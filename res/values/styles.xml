<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.CompoundButton.CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_button_selector</item>
    </style>

    <!-- List Adapter styles -->
    <style name="list_item_title">
        <item name="android:textColor">#ff2a3d50</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_item_text" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#ff627c95</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- styles for elements -->
    <style name="TransferIndicator">
        <item name="android:layout_width">32sp</item>
        <item name="android:layout_height">32sp</item>
        <item name="android:layout_gravity">left|bottom</item>
        <item name="android:layout_marginBottom">2sp</item>
        <item name="android:layout_marginRight">10px</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="BrowseFileTypeButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
    </style>

    <style name="BrowsePeerHeaderIconCommon" parent="android:Widget.ImageButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">3sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BrowsePeerHeaderIconCommon.Normal" parent="BrowsePeerHeaderIconCommon">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="BrowsePeerHeaderIconCommon.Big" parent="BrowsePeerHeaderIconCommon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="BrowsePeerHeaderIcon" parent="BrowsePeerHeaderIconCommon.Normal"></style>

    <style name="BrowsePeerHeaderTextCommon" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">left|top</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">4.0</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BrowsePeerHeaderTextCommon.Normal" parent="BrowsePeerHeaderTextCommon">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="BrowsePeerHeaderTextCommon.Big" parent="BrowsePeerHeaderTextCommon">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="BrowsePeerHeaderText" parent="BrowsePeerHeaderTextCommon.Normal"></style>

    <!-- Animations begin -->
    <style name="Animations" />

    <style name="Animations_GrowFromLeft">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <!-- Animations end -->

    <style name="TransparentListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
    </style>

    <style name="TransparentExpandableListView" parent="@android:style/Widget.ExpandableListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
    </style>

    <style name="Preferences"></style>

    <style name="ProgressBarHolo.Horizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <!-- SlideMenu begin -->

    <style name="SlideMenu"></style>

    <style name="SlideMenu.List">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dip</item>
        <item name="android:background">@drawable/slidemenu_background</item>
        <item name="android:listSelector">@drawable/slidemenu_list_selector</item>
    </style>

    <style name="SlideMenu.Item"></style>

    <style name="SlideMenu.Item.Image">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="SlideMenu.Item.Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <!-- SlideMenu end -->


    <!-- Main Fragment Simple Header begin -->

    <style name="MainFragmentSimpleHeader" parent="@android:style/TextAppearance.Large">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Main Fragment Simple Header end -->


    <!-- Browse Peer fragment file counter header begin -->

    <style name="BrowsePeerFragmentFileCounterHeader" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Browse Peer fragment file counter header end -->


    <!-- Menu Media Type begin -->

    <style name="MenuMediaType"></style>

    <style name="MenuMediaType.Item"></style>

    <style name="MenuMediaType.Item.Text">
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Menu Media Type end -->


    <!-- Browse Peer list begin -->

    <style name="BrowsePeerList"></style>

    <style name="BrowsePeerList.Item"></style>

    <style name="BrowsePeerList.Item.Title">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff143149</item>
    </style>

    <style name="BrowsePeerList.Item.Extra">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ff143149</item>
    </style>

    <style name="BrowsePeerList.Item.Size">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#ff54afe4</item>
    </style>

    <!-- Browse Peer list end -->

</resources>