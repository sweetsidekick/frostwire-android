<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/activity_main_layout_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_basic_blue" >

        <ImageButton
            android:id="@+id/activity_main_button_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/main_menu_button_icon_selector" />

        <RelativeLayout
            android:id="@+id/activity_main_layout_header_placeholder"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/activity_main_left_drawer"
            android:layout_width="@dimen/mainmenu_width"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="vertical" >

            <com.frostwire.android.gui.views.FWListView
                android:id="@+id/left_drawer"
                style="@style/SlideMenu.List"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/slidemenu_background"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp" />

            <com.frostwire.android.gui.views.PlayerMenuItemView
                android:id="@+id/slidemenu_player_menuitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

    <com.frostwire.android.gui.views.PlayerNotifierView
        android:id="@+id/activity_main_player_notifier"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>