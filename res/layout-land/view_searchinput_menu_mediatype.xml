<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/view_searchinput_menu_mediatype_audio"
        style="@style/MenuMediaType.Item.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/audio_icon" />

    <Button
        android:id="@+id/view_searchinput_menu_mediatype_video"
        style="@style/MenuMediaType.Item.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/video_icon" />

    <Button
        android:id="@+id/view_searchinput_menu_mediatype_images"
        style="@style/MenuMediaType.Item.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/picture_icon" />

    <Button
        android:id="@+id/view_searchinput_menu_mediatype_applications"
        style="@style/MenuMediaType.Item.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/application_icon" />

    <Button
        android:id="@+id/view_searchinput_menu_mediatype_documents"
        style="@style/MenuMediaType.Item.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/document_icon" />

    <Button
        android:id="@+id/view_searchinput_menu_mediatype_torrents"
        style="@style/MenuMediaType.Item.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/torrent_icon" />

</LinearLayout>