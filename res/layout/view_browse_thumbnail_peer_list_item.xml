<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_background_selector" >

    <ImageView
        android:id="@+id/view_browse_peer_list_item_file_thumbnail"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/polaroid_frame"
        android:contentDescription="@null"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/view_browse_peer_list_item_lock_toggle"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_alignParentRight="true"
        android:layout_margin="3dp"
        android:background="@null"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/unlocked" />

    <TextView
        android:id="@+id/view_browse_peer_list_item_file_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3sp"
        android:layout_toLeftOf="@id/view_browse_peer_list_item_lock_toggle"
        android:layout_toRightOf="@id/view_browse_peer_list_item_file_thumbnail"
        android:singleLine="true"
        android:text="@string/dummy_title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/view_browse_peer_list_item_extra_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/view_browse_peer_list_item_file_title"
        android:layout_alignRight="@id/view_browse_peer_list_item_file_title"
        android:layout_below="@id/view_browse_peer_list_item_file_title"
        android:singleLine="true"
        android:text="@string/dummy_extra"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/view_browse_peer_list_item_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view_browse_peer_list_item_file_thumbnail"
        android:layout_alignLeft="@id/view_browse_peer_list_item_file_title"
        android:layout_margin="3dp"
        android:text="@string/dummy_size"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffe9a54c" />

</RelativeLayout>