<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_dark_blue"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="8sp"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:paddingTop="8sp" >

        <TextView
            style="@style/SlideMenu.Item.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support_frostwire"
            android:textColor="@color/app_highlight_icons"
            android:textSize="12sp" />

        <TextView
            style="@style/SlideMenu.Item.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/donate"
            android:textColor="@color/app_highlight_icons" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ff1d2934" />

        <Button
            android:id="@+id/fragment_about_button_donate1"
            style="@style/DonationButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/one_dollar"
            android:textSize="16sp" />

        <Button
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ff1d2934" />

        <Button
            android:id="@+id/fragment_about_button_donate2"
            style="@style/DonationButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/five_dollars"
            android:textSize="16sp" />

        <Button
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ff1d2934" />

        <Button
            android:id="@+id/fragment_about_button_donate3"
            style="@style/DonationButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/ten_dollars"
            android:textSize="15sp" />

        <Button
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ff1d2934" />

        <Button
            android:id="@+id/fragment_about_button_donate4"
            style="@style/DonationButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/twenty_five_dollars"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>